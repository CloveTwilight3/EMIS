{
  "name": "emis-assistant",
  "version": "0.1.0",
  "description": "EMIS - Voice-activated transfeminine AI assistant",
  "main": "dist/main.js",
  "scripts": {
    "compile": "tsc",
    "compile:watch": "tsc --watch",
    "prebuild": "npm run compile",
    "start": "npm run compile && electron .",
    "dev": "set NODE_ENV=development&& npm run compile && electron .",
    "dev-win": "set NODE_ENV=development&& npm run compile && electron .",
    "build": "npm run compile && electron-builder build",
    "build:win": "npm run compile && electron-builder build --win",
    "build:linux": "npm run compile && electron-builder build --linux",
    "build:mac": "npm run compile && electron-builder build --mac",
    "build:deb": "npm run compile && electron-builder build --linux deb",
    "build:rpm": "npm run compile && electron-builder build --linux rpm",
    "build:appimage": "npm run compile && electron-builder build --linux AppImage",
    "build:all-linux": "npm run compile && electron-builder build --linux AppImage deb rpm",
    "test-mic": "npm run compile && electron dist/browser-mic-test.js",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "voice-assistant",
    "ai",
    "electron",
    "speech-recognition",
    "transfeminine",
    "desktop-assistant"
  ],
  "author": {
    "name": "Clove Twilight",
    "email": "admin@clovetwilight3.co.uk"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/electron": "^1.4.38",
    "@types/node": "^25.0.1",
    "electron": "^27.0.0",
    "electron-builder": "^26.0.12",
    "electron-notarize": "^1.2.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@google-cloud/speech": "^7.2.0",
    "@google-cloud/text-to-speech": "^6.3.0",
    "axios": "^1.11.0",
    "node-record-lpcm16": "^1.0.1",
    "play-sound": "^1.1.6"
  },
  "build": {
    "appId": "com.clovetwilight.emis",
    "productName": "EMIS",
    "copyright": "Copyright Â© 2025 Clove Twilight",
    "files": [
      "dist/**/*",
      "index.html",
      "style.css",
      "assets/**/*",
      "build/**/*",
      "google-credentials.json",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!**/{.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/*.ts",
      "!tsconfig.json"
    ],
    "directories": {
      "buildResources": "build",
      "output": "release"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "artifactName": "${productName}-${version}-win-${arch}.${ext}",
      "publisherName": "Clove Twilight"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "EMIS Assistant",
      "license": "./LICENSE"
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "category": "Utility",
      "icon": "build/icon.png",
      "artifactName": "${productName}-${version}-linux-${arch}.${ext}",
      "maintainer": "Clove Twilight <admin@clovetwilight3.co.uk>",
      "desktop": {
        "Name": "EMIS",
        "Comment": "Voice-activated transfeminine AI assistant",
        "Categories": "Utility;Accessibility;"
      }
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.icns",
      "artifactName": "${productName}-${version}-mac.${ext}"
    },
    "deb": {
      "depends": [
        "libnotify4",
        "libxtst6",
        "libnss3",
        "libasound2"
      ]
    },
    "rpm": {
      "depends": [
        "libnotify",
        "libXtst",
        "alsa-lib"
      ]
    },
    "appImage": {
      "license": "./LICENSE"
    }
  }
}
